<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.org/schema/arquillian
            http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

	<container qualifier="payara-micro-managed" default="true">
		<configuration>
			<property name="microJar">target/demo-1.0-SNAPSHOT-microbundle.jar</property>
			<property name="clusterEnabled">false</property>
			<property name="cmdOptions">
				-javaagent:target/jacoco/org.jacoco.agent-runtime.jar=output=tcpserver,address=*,port=6300
			</property>
			<property name="debug">false</property>
		</configuration>
	</container>
</arquillian>
